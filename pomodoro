#!/bin/bash

function restart () {
	act=$(date +%s)
	to=$(expr $act + 1200)
	oldframe=$(ratpoison -c "curframe")
	ratpoison -c "fselect 4"
	$0 $to &
	~/git/xwait/xwait
	ratpoison -c "fselect $oldframe"
	exit 0
}

trap restart USR1

TO_DATE=${1:-`date +%s`}

while :;
do
	output=""
	if [[ "$TO_DATE" -gt `date +%s` ]]
	then
     output=$(date -u --date @$(($TO_DATE - `date +%s`)) +%M:%S)
	fi
	printf "\f%s" "$output"
	sleep 0.5
done | ~/git/xecho/xecho -stdin
